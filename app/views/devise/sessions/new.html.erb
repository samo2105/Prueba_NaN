<br><br>
<div class="card p-4">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group row">
    <%= f.label :email, class:'col-sm-2 col-form-label'   %><br />
    <div class="col-sm-10">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control'  %>
    </div>
  </div>

  <div class="field form-group row">
    <%= f.label :password, class:'col-sm-2 col-form-label'   %><br />
    <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "current-password", class:'form-control'  %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group row">
      <%= f.check_box :remember_me, class:'form-control col-sm-6 text-right ' %>
      <%= f.label :remember_me, class:'col-sm-6 col-form-label'  %>
    </div>
  <% end %>
<br>
  <div class="actions">
    <%= f.submit "Log in", class:'btn btn-primary col-sm-12' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
